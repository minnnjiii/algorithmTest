{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: clang 활성 파일 빌드",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "컴파일러에 의해 생성된 작업입니다."
        }
    ]
}
